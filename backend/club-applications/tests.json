{
  "tests": [
    {
      "name": "Create new application",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Тестовая Участница",
        "email": "test@example.com",
        "phone": "+7 (999) 123-45-67",
        "telegram": "@testuser",
        "message": "Хочу вступить в клуб"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "application_id": "number",
        "status": "string",
        "created_at": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Get application by email",
      "method": "GET",
      "path": "/?email=test@example.com",
      "expectedStatus": 200,
      "expectedBody": {
        "email": "test@example.com",
        "name": "string",
        "status": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Get non-existent application",
      "method": "GET",
      "path": "/?email=nonexistent@example.com",
      "expectedStatus": 404,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}